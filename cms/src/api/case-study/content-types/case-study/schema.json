{
  "kind": "collectionType",
  "collectionName": "case_studies",
  "info": {
    "singularName": "case-study",
    "pluralName": "case-studies",
    "displayName": "Case Study",
    "description": "Client case studies with detailed content"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "department": {
      "type": "enumeration",
      "enum": [
        "Operations",
        "Sales",
        "Customer Success",
        "Finance",
        "Marketing",
        "HR",
        "Field Services"
      ],
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "problem": {
      "type": "richtext",
      "required": false
    },
    "solution": {
      "type": "richtext",
      "required": false
    },
    "results": {
      "type": "json",
      "required": false
    },
    "resultsTimeframe": {
      "type": "string",
      "required": false
    },
    "videoUrl": {
      "type": "string",
      "required": false
    },
    "videoType": {
      "type": "enumeration",
      "enum": [
        "youtube",
        "loom",
        "none"
      ],
      "default": "none"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
